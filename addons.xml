<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.radiostops" name="Radios Top" version="3.0" provider-name="Kodish MC">
    <requires>
        <import addon="xbmc.python2" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
	
	<extension point="xbmc.addon.repository" name="Repositorio Radios Top">
		<info compressed="false">https://raw.githubusercontent.com/kodishmediacenter/radiostop/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/kodishmediacenter/radiostop/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/kodishmediacenter/radiostop/master/Plugins</datadir>
	</extension>
	
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Radios Top</summary>
        <description>Radios Top</description>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
	
</addon>

</addons>
